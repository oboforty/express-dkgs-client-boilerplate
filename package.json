    "helmet": "^6.0.0",
    "jwk-to-pem": "^2.0.5",
    "jwks-rsa": "^2.1.5",
    "morgan": "^1.10.0",
    "node-mocks-http": "^1.11.0",
    "toml": "^3.0.0",
    "ts-jest": "^29.0.3",
    "winston": "^3.8.2",
    "yargs": "^17.6.0"
  },
