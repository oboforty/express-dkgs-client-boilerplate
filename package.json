{
  "name": "express-dkgs-client-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate express app that uses DoorsKGS authentication",
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"set NODE_ENV=dev&&nodemon -q dist/index.js\"",
    "task": "concurrently \"npx tsc --watch\" \"set NODE_ENV=dev&&nodemon -q dist/cli.js\"",
    "test": "jest --env=node --colors --coverage test"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
